html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Connect4
    link(rel='stylesheet' href='/css/connect4.css')
    script(src='/javascript/connect4.js' type='text/javascript')
    script(src='/javascript/createGame.js' type='text/javascript')
  body(onbeforeunload="return logOut()" onload="changeColorBasedOnMode()")
    div#backgroundSq()
    img#titleImage.centre(src='/images/Connect 4.png')
    div #{status}
    if status === "public"
      div.switch
        input#togBtn(type='checkbox' checked)
        .slider.round(onclick='changeCheckBox()')
          span.on Public
          span.off Private
    else if status === "private"
      div.switch
        input#togBtn(type='checkbox')
        .slider.round(onclick='changeCheckBox()')
          span.on Public
          span.off Private
    div#currMode #{userMode}
    if userMode == "dark"
      div.darkSwitch
        input#togBtn1(type='checkbox' checked)
        .darkSlider.darkround(onclick='changeMode()')
          span.darkon Dark
          span.darkoff Light
    else if userMode == "light"
      div.darkSwitch
        input#togBtn1(type='checkbox')
        .darkSlider.darkround(onclick='changeMode()')
          span.darkon Dark
          span.darkoff Light
    div#loggedinuser Logged in As #{uservalname}
    div#findingUserToPlayWith
    button#playButton(onclick="findUser('login')") Play
    button#playTournamentButton(onclick='findUser("tournament")') Play Tournament
    button#UserstatButton(onclick="statInfo()") Stat
    button#exitButtonOnPage(onclick="logOutDialogue()") Log Out
    button#friendsButton(onclick='friendsNavigation()') Friends
    script(src="/socket.io/socket.io.js")
